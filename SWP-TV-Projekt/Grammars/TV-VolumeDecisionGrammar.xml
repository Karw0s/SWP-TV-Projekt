<grammar version="1.0" xml:lang="pl-PL" root="rootRule"
 xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="rootRule">
    <ruleref uri="#decision" />
    <tag> out.decision=rules.latest(); </tag>
  </rule>

  <rule id="decision">
    <one-of>
      <item>
        <!--<one-of>-->
          <item>
            tak <tag> out="1";</tag>
          </item>
          <!--<item>
            tak chcę <tag> out="1";</tag>
          </item>
          <item>
            chcę <tag> out="1";</tag>
          </item>
        </one-of>-->
        <item repeat="0-1">
          <item repeat="0-1"> na </item>
          <ruleref uri="#volume" />
          <tag> out.volume=rules.latest(); </tag>
        </item>
      </item>
      <!--<one-of>-->
        <item>
          nie <tag> out="0";</tag>
        </item>
        <!--<item>
          nie chcę <tag> out="0";</tag>
        </item>
        <item>
          nie dziękuję <tag> out="0";</tag>
        </item>
      </one-of>-->
    </one-of>
  </rule>
  
  
  <rule id="volume">
    <one-of>
      <item>
        wycisz <tag> out="0";</tag>
      </item>
      <item>
        zero <tag> out="0";</tag>
      </item>
      <item>
        jeden <tag> out="1";</tag>
      </item>
      <item>
        dwa <tag> out="2"; </tag>
      </item>
      <item>
        trzy <tag> out="3"; </tag>
      </item>
      <item>
        cztery <tag> out="4"; </tag>
      </item>
      <item>
        pięć <tag> out="5";</tag>
      </item>
      <item>
        sześć <tag> out="6"; </tag>
      </item>
      <item>
        siedem <tag> out="7"; </tag>
      </item>
      <item>
        osiem <tag> out="8"; </tag>
      </item>
      <item>
        dziewięć <tag> out="9"; </tag>
      </item>
      <item>
        dziesięć <tag> out="10"; </tag>
      </item>
    </one-of>
  </rule>
 
</grammar>