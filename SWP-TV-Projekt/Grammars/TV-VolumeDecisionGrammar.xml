<grammar version="1.0" xml:lang="pl-PL" root="rootRule"
         xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
    <rule id="rootRule">
        <ruleref uri="#decision"/>
        <tag>out.decision=rules.latest();</tag>
    </rule>

    <rule id="decision">
        <one-of>
            <item>
                <item>
                    <ruleref uri="YesNoGrammar.xml#yes"/>
                    <tag>out=1;</tag>
                </item>
                <item repeat="0-1">
                    <item repeat="0-1">
                        <ruleref uri="TV-ChangeVolumeGrammar.xml#changeVolumeCommand"/>
                    </item>
                    <item>dźwięk</item>
                    <item>głośność</item>
                    <item repeat="0-1">na</item>
                    <ruleref uri="TV-VolumeLevelGrammar.xml#volume"/>
                    <tag>out.volume=rules.latest();</tag>
                </item>
            </item>
            <item>
                <ruleref uri="YesNoGrammar.xml#no"/>
                <tag>out=0;</tag>
            </item>
        </one-of>
    </rule>

</grammar>