<grammar version="1.0" xml:lang="pl-PL" root="rootRule"
         xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
    <rule id="rootRule">
        <item repeat="0-1">
            <ruleref uri="#closeCommand"/>
            <item repeat="0-1">
                <ruleref uri="#details"/>
                <tag>out.close=rules.latest();</tag>
            </item>
        </item>
        <item repeat="0-1">
            <ruleref uri="#changeChannelCommand"/>
            <item repeat="0-1">program</item>
            <item>na</item>
            <ruleref uri="#channel"/>
            <tag>out.channel = rules.latest();</tag>
        </item>
        <item repeat="0-1">
            <item repeat="0-1">
                <ruleref uri="TV-ChangeVolumeGrammar.xml#changeVolumeCommand"/>
            </item>
            <one-of>
                <item>dźwięk</item>
                <item>głośność</item>
            </one-of>
            <item repeat="0-1">na</item>
            <ruleref uri="TV-VolumeLevelGrammar.xml#volume"/>
            <tag>out.volume=rules.latest();</tag>
        </item>
        <item repeat="0-1">
            <ruleref uri="#displayCommand"/>
            <ruleref uri="#details"/>
            <tag>out.details=rules.latest();</tag>
        </item>
    </rule>


    <rule id="changeChannelCommand">
        <one-of>
            <item>Przełącz</item>
            <item>Zmień</item>
            <item>Chcę zmienić</item>
            <item>Włącz</item>
        </one-of>
    </rule>


    <rule id="channel">
        <one-of>
            <item>
                pierwszy
                <tag>out="1";</tag>
            </item>
            <item>
                jedynkę
                <tag>out="1";</tag>
            </item>
            <item>
                jeden
                <tag>out="1";</tag>
            </item>
            <item>
                drugi
                <tag>out="2";</tag>
            </item>
            <item>
                dwójkę
                <tag>out="2";</tag>
            </item>
            <item>
                dwa
                <tag>out="2";</tag>
            </item>
            <item>
                trzeci
                <tag>out="3";</tag>
            </item>
            <item>
                trójkę
                <tag>out="3";</tag>
            </item>
            <item>
                trzy
                <tag>out="3";</tag>
            </item>
            <item>
                czwarty
                <tag>out="4";</tag>
            </item>
            <item>
                czwórkę
                <tag>out="4";</tag>
            </item>
            <item>
                cztery
                <tag>out="4";</tag>
            </item>
            <item>
                piąty
                <tag>out="5";</tag>
            </item>
            <item>
                piątkę
                <tag>out="5";</tag>
            </item>
            <item>
                pięć
                <tag>out="5";</tag>
            </item>
        </one-of>
    </rule>

    <rule id="details">
        <one-of>
            <item>
                szczegóły
            </item>
            <item>
                opis
            </item>
            <item>
                telegazetę
            </item>
        </one-of>
    </rule>

    <rule id="displayCommand">
        <one-of>
            <item>otwórz</item>
            <item>sprawdź</item>
            <item>włącz</item>
            <item>wyświetl</item>
        </one-of>
    </rule>

    <rule id="closeCommand">
        <one-of>
            <item>wyłącz</item>
            <item>zamknij</item>
        </one-of>
    </rule>

</grammar>